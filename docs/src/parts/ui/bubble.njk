<section>
  <h3 id="bubble" class="is-h5">bubble</h3>
  <div class="well">
    <div data-grid>
      <div data-col="6 4-sm" data-flex="is-center-items is-center">
        <a class="btn"><span>bubble </span><span
              class="bubble bubble_small bubble_invert">2</span></a>
      </div>
      <div data-col="3 4-sm" data-flex="is-center-items is-center">
        <a class="btn"><span class="bubble bubble_invert">2</span></a>
      </div>
      <div data-col="3 4-sm" data-flex="is-center-items is-center">
        <span class="bubble bubble_link">2</span>
      </div>
    </div>
  </div>
  <pre><code class="html">
<a class="btn"><span>bubble </span><span class="bubble bubble_invert">2</span></a>
...
<a class="btn"><span class="bubble bubble_invert">2</span></a>
...
<span class="bubble">2</span></code></pre>

  <table class="table">
    <tbody>
    <tr>
      <td><strong>theme modifier</strong></td>
      <td>
                  <span class="code"
                        v-for="theme in atoms.bubbles.themeModifiers">${ '.' + theme}</span>
      </td>
    </tr>
    <tr>
      <td><strong>state modifier</strong></td>
      <td>
                  <span class="code"
                        v-for="state in atoms.bubbles.stateModifiers">${ '.' + state}</span>
      </td>
    </tr>
    <tr>
      <td><strong>size modifier</strong></td>
      <td>
                  <span class="code"
                        v-for="size in atoms.bubbles.sizeModifiers">${ '.' + size}</span>
      </td>
    </tr>
    <tr>
      <td><strong>style modifier</strong></td>
      <td>
        -
      </td>
    </tr>
    </tbody>
  </table>
</section>

