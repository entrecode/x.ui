<section>
  <h3 id="is-clipped">is-clipped</h3>
  <p>use for
    <span class="code">overflow: hidden;</span>
  </p>
  <div class="well align-center">
    <span class="is-h6">is-clipped-{axis}{ -
      <a href="#xui-breakpoint-shortcodes">breakpoint</a> |
      <span class="is-ink-light">null</span> }</span>
  </div>
  <table class="table">
    <tr data-grid="no-gutter">
      <td data-col="4">
        <strong>{axis}</strong>
      </td>
      <td data-col="8">
        <em>empty</em>
        <span class="code">x</span>
        <span class="code">y</span>
      </td>
    </tr>
  </table>
</section>

<div class="bumper"></div>

<section>
  <h3 id="is-clipped">is-scrollable</h3>
  <p>use for
    <span class="code">overflow: scroll;</span>
  </p>
  <div class="well align-center">
    <span class="is-h6">is-scrollable-{axis}{ -
      <a href="#xui-breakpoint-shortcodes">breakpoint</a> |
      <span class="is-ink-light">null</span> }</span>
  </div>
  <table class="table">
    <tr data-grid="no-gutter">
      <td data-col="4">
        <strong>{axis}</strong>
      </td>
      <td data-col="8">
        <em>empty</em>
        <span class="code">x</span>
        <span class="code">y</span>
      </td>
    </tr>
    <tr data-grid="no-gutter">
      <td data-col="4">
        <strong>special</strong>
      </td>
      <td data-col="8">
        <span class="code">x-contain</span>
        <span class="code">y-contain</span>
        <br> elements with this class, only scroll inside itself
      </td>
    </tr>
  </table>
</section>

<div class="bumper"></div>